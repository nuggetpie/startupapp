<h1>Listing shop_profiles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Shop owner</th>
      <th>Shop name</th>
      <th>Shop product</th>
      <th>Shop category</th>
      <th>Shop keyword</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_profiles.each do |shop_profile| %>
      <tr>
        <td><%= shop_profile.shop_owner %></td>
        <td><%= shop_profile.shop_name %></td>
        <td><%= shop_profile.shop_product %></td>
        <td><%= shop_profile.shop_category %></td>
        <td><%= shop_profile.shop_keyword %></td>
        <td><%= link_to 'Show', shop_profile %></td>
        <td><%= link_to 'Edit', edit_shop_profile_path(shop_profile) %></td>
        <td><%= link_to 'Destroy', shop_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

