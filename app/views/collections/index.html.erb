<h1>Listing collections</h1>

<table>
  <thead>
    <tr>
      <th>Collection name</th>
      <th>Collection category</th>
      <th>Shop name</th>
      <th>Shop product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.collection_name %></td>
        <td><%= collection.collection_category %></td>
        <td><%= collection.shop_name %></td>
        <td><%= collection.shop_product %></td>
        <td><%= link_to 'Show', collection %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

