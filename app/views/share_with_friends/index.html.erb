<h1>Listing share_with_friends</h1>

<table>
  <thead>
    <tr>
      <th>Friends</th>
      <th>Collection name</th>
      <th>Shop name</th>
      <th>Shop product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_with_friends.each do |share_with_friend| %>
      <tr>
        <td><%= share_with_friend.friends %></td>
        <td><%= share_with_friend.collection_name %></td>
        <td><%= share_with_friend.shop_name %></td>
        <td><%= share_with_friend.shop_product %></td>
        <td><%= link_to 'Show', share_with_friend %></td>
        <td><%= link_to 'Edit', edit_share_with_friend_path(share_with_friend) %></td>
        <td><%= link_to 'Destroy', share_with_friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

